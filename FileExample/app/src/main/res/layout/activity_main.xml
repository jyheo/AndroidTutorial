<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnReadIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read Internal"
        app:layout_constraintBottom_toTopOf="@+id/btnWriteIn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnWriteIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write Internal"
        app:layout_constraintBottom_toTopOf="@+id/btnReadExt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReadIn" />

    <Button
        android:id="@+id/btnReadExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read External"
        app:layout_constraintBottom_toTopOf="@+id/btnWriteExt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWriteIn" />

    <Button
        android:id="@+id/btnWriteExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write External"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnReadExt" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnWriteExt"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>